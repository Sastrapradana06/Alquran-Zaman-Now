<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />

    <!-- icons link -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css" />

    <!-- font -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Arvo:ital,wght@1,400;1,700&family=DynaPuff&family=Inconsolata&family=Merriweather:wght@400;700&family=Oswald&family=Poppins:wght@400;500&family=Roboto+Mono:wght@100;500&family=Roboto:wght@100&family=Signika+Negative:wght@300;400&family=Ubuntu&display=swap"
      rel="stylesheet"
    />

    <!-- <link rel="stylesheet" href="../css/main.css"> -->

    <!-- My Css -->
    <style>
      * {
        margin: 0;
        padding: 0;
      }
      section {
        width: 70%;
        margin: auto;
        cursor: pointer;
      }

      /* navbar */
      .container-nav {
        width: 100%;
        box-sizing: border-box;
        display: flex;
        justify-content: center;
        align-items: center;
      }
      .nav {
        height: 60px;
        width: 80%;
        border-radius: 20px;
        background-color: black;
        display: flex;
        justify-content: center;
        align-items: center;
        box-sizing: border-box;
      }

      h2 {
        color: white;
        font-family: "Inconsolata", monospace;
        text-align: center;
        padding-top: 5px;
      }
      .dark-mode {
        margin-left: 20px;
        margin-top: 10px;
        background-color: teal;
        padding: 5px 10px;
        border-radius: 5px;
        transition: all 0.3s;
        color: white;
        cursor: pointer;
      }
      .dark-mode:hover {
        background-color: rgb(3, 118, 118);
        box-shadow: 1px 1px 5px rgba(255, 253, 253, 0.7) ;
      }


      @media (max-width: 576px) {
        .nav {
          width: 90%;
          height: 50px;
          border-radius: 20px;
          margin-top: 0.5px;
        }
        h2 {
          font-size: 1.2rem;
          padding-top: 2px;
          text-align: center;
        }
      }

            /* css dark mode */
      .mode {
        background-color: black;
        color: white;
      }
      .nav-dark {
        background-color: rgb(34, 33, 33);
        color: black;
      }
      .icon-dark {
        color: black;
      }

      /* css navbar blur */
      .navbar-blur {
        backdrop-filter: blur(8.3px);
        background: rgba(0, 0, 0, 0.76);
        color: black;
      }

      /* css navbar floating */
      .floating {
        margin-top: 5px;
      }

    </style>


    <title><%- title %></title>
  </head>
  <body class="body">

    <div class="container-nav fixed-top">
      <div class="nav shadow">
        <h2>Al-Quran Zaman Now</h2>
        <p class="dark-mode"><i class="icons bi bi-moon-stars"></i></p>
      </div>
    </div>

    <%- body %>

    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script>

      // Dark Mode
      const navbar = document.querySelector(".nav");
      const btn = document.querySelector(".dark-mode");
      const body = document.querySelector(".body");
      const icon = document.querySelector('.icons')
      btn.addEventListener("click", () => {
        body.classList.toggle("mode");
        navbar.classList.toggle("nav-dark");
        icon.classList.toggle('icon-dark')
      });

      // navbar blur
      document.addEventListener("scroll", function() {
        if (document.body.scrollTop > 50 || document.documentElement.scrollTop > 50) {
            navbar.classList.add("navbar-blur");
            navbar.classList.add("floating");
        } else {
            navbar.classList.remove("navbar-blur");
            navbar.classList.remove("floating");
      }
});
    </script>
    <!-- Option 2: Separate Popper and Bootstrap JS -->
